<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uirepo.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <application
        android:name="com.uirepo.sample.UISampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.uirepo.sample.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uirepo.sample.FeatureListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.uirepo.sample.featurelistview.RefreshListViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.uirepo.sample.featurelistview.TipListViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.uirepo.sample.featurelistview.SecPullListViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.uirepo.sample.featurescrollview.RefreshScrollViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.uirepo.sample.featurescrollview.TipScrollViewActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>